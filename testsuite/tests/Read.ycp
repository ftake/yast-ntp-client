{
    include "testsuite.ycp";
    import "Progress";
    import "NtpClient";
    import "Mode";

    Mode::test = true;

    Progress::off ();

    map READ = $[
	"init" : $[
	    "scripts" : $[
		"exists" : true,
		"runlevel" : $["xntp" : $[]],
	    ],
	],
	"etc" : $[
	    "ntp_conf" : $[
		"server" : [
		    ["ntp1", "options1"],
		    ["127.127.1.2", "options_clock"],
		    ["ntp2", "options2"]
		],
		"fudge" : [
		    ["127.127.1.2", "fudge_clock"],
		],
		"peer" : [
		    ["peer1", "options_peer"],
		],
		"broadcast" : [],
		"broadcastclient" : [],
	    ],
	],
	"sysconfig" : $[
	    "xntp" : $[
		"XNTPD_INITIAL_NTPDATE" : "AUTO-2",
	    ],
	],
    ];

    TEST (``(NtpClient::Read ()), [READ, $[], $[]], nil);
    TEST (``(NtpClient::Export ()), [READ, $[], $[]], nil);
}
